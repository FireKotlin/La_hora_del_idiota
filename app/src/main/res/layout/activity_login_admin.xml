<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dise_o_sin_t_tulo"
        tools:context=".database.LoginAdminCs">

        <TextView
            android:id="@+id/iniciartextA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Pido admin"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="42dp" />

        <TextView
            android:id="@+id/correotextA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Correo electronico:"
            app:layout_constraintTop_toBottomOf="@id/iniciartextA"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="46dp"
            android:layout_marginTop="46dp"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/correoeditA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/correotextA"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Tu correo:"
            android:inputType="textCapSentences"
            android:layout_marginStart="42dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@color/white"
            android:textSize="24sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/passwordtextA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Contraseña:"
            app:layout_constraintTop_toBottomOf="@id/correoeditA"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="46dp"
            android:layout_marginTop="46dp"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/passwordeditA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/passwordtextA"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Tu contraseña:"
            android:inputType="textPassword"
            android:layout_marginStart="42dp"
            android:layout_marginTop="12dp"
            android:textColorHint="@color/white"
            android:textSize="24sp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/signUpButtonA"
            android:layout_width="168dp"
            android:layout_height="58dp"
            android:text="REGISTRARSE"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/passwordeditA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="86dp"
            android:layout_marginStart="32dp" />

        <Button
            android:id="@+id/signInButtonA"
            android:layout_width="168dp"
            android:layout_height="58dp"
            android:text="ACCEDER"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/passwordeditA"
            app:layout_constraintStart_toEndOf="@id/signUpButtonA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="86dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
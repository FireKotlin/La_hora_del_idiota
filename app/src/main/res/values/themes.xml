<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LaHoraDelIdiota" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.LaHoraDelIdiota">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <!-- Cambia el color del texto del menú a negro -->
        <item name="android:textColor">@android:color/black</item>
        <!-- Agrega otros atributos de estilo aquí si es necesario -->
    </style>

</resources>